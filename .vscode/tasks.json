{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "zig build -Dfile=${relativeFile}",
      "problemMatcher": "$zig",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
    },
    {
      "label": "build release",
      "type": "shell",
      "command": "zig build -Doptimize=ReleaseFast -Dfile=${relativeFile} --prefix \"./\"",
      "problemMatcher": "$zig",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
    },
    {
      "label": "build test",
      "type": "shell",
      "command": "zig build test -Dfile=${relativeFile}",
      "problemMatcher": "$zig",
      "options": {"env": {}},
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ],
}