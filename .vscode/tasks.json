  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "zig build -- ${relativeFile}",
      "problemMatcher": "$zig",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
    },
    {
      "label": "build test",
      "type": "shell",
      "command": "zig build test -- ${relativeFile}",
      "problemMatcher": "$zig",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}